    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "python": "${workspaceRoot}/venv/Scripts/python.exe",
            "console": "integratedTerminal"
        },
        {
            "name": "run commands",
            "type": "python",
            "request": "launch",
            "python": "${workspaceRoot}/venv/Scripts/python.exe",
            "console": "integratedTerminal",
            "module": "pytest"
        },
        {
            "name": "cli.main",
            "type": "python",
            "request": "launch",
            "python": "${workspaceRoot}/venv/Scripts/python.exe",
            "console": "integratedTerminal",
            "module": "pytest",
            "args": ["tests/test_package.py::test_cli", "."]
        }
    ]
}